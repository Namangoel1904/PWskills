//Q1 - Write a function to print squares of the first 5 natural numbers.

//Solution Code:

#include<iostream>
using namespace std;

int square_fun(){
  for(int i=1; i<=5; i++){
    int res=i*i;
    cout<<(res)<<" ";
  }
  return 0;
}

int main(){
  square_fun();
}

