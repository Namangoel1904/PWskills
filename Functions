//Q4 - Given two numbers a and b, write a program using functions to print all the odd numbers
//between them.

//Solution Code:

#include <iostream>
using namespace std;

int Podd(int e1, int e2){
  for (int i=e1; i<=e2; i++){
    if(i%2 != 0){
      cout<<i<<" ";
    }
  }
  return 0;
}

int main(){
  int e1;
  int e2;
  cin>>e1;
  cin>>e2;

  Podd(e1, e2);
}

//__________________________________________________________________________________________________________________________________________________________________________

//Q5 - Given two numbers a and b, write a program to print all the prime numbers present between
//a and b.

//Solution Code:

#include <iostream>
using namespace std;

int is_prime(int e1, int e2) {
  bool flag = true;
  if (e1 == 2) {
    cout << e1 << " ";
    e1++;
  }
  for (int i = e1; i <= e2; i++) {
    for (int j = 2; j < i; j++) {
      if (i % j == 0) {
        flag = false;
      }
    }
    if (flag == true) {
      cout << i << " ";
    }
    flag = true;
  }
  return 0;
}

int main() {
  int e1;
  int e2;
  cin >> e1;
  cin >> e2;

  is_prime(e1, e2);
}


