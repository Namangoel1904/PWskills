//Q3 - Given the age of a person, write a function to check if the person is eligible to vote or not.

//Solution Code:

#include<iostream>
using namespace std;

void check(int age){
  if (age>=18){
    cout<<"Yes";
  }else if(age<=0) {
    cout<<"Invalid Entry";
  }
  else{
    cout<<"No";
  }
}

int main(){
  int age;
  cout<<"Age: ";
  cin>>age;
  check(age);

  return 0;
}

