//Q2 - Given radius of a circle. Write a function to print the area and circumference of the circle.

//Solution Code:

#include<iostream>
using namespace std;

float area_Cmf(float r){
  float Area = (3.14*r*r);
  float Circumference = (2*3.14*r);

  cout<<"Area: "<<Area<<endl;
  cout<<"Circumference: "<<Circumference<<endl;

  return 0;
}

int main(){
  float radius;
  cout<<"Radius: ";
  cin>>radius;

  area_Cmf(radius);
}

